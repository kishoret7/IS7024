@page
@model RealEstate.Pages.BrewsModel
@{
    ViewData["Title"] = "Brewery";
    var TheBrewsList = (List<BrewsData.Breweries>)ViewData["Brews"];
}

<link rel="stylesheet" href="/css/StyleSheet.css" type="text/css" />
<div>
    <h4> <mark>Looking for a booze at Chicago!!? </mark>   </h4>
</div>

<div>       
    <table class="myBrewTable">
        <tr>
            <th>Name</th>
            <th>Brewery Type</th>
            <th>Street</th>
            <th>Phone</th>
            <th>Website Url</th>
        </tr>
        @{
            int First30brews = 0;
            foreach (BrewsData.Breweries brew in TheBrewsList)
            {

                First30brews = First30brews + 1;
                <tr>
                    <td>@brew.Name</td>
                    <td>@brew.BreweryType</td>
                    <td>@brew.Street</td>
                    <td>@brew.Phone</td>
                    <td><a href="@brew.WebsiteUrl">@brew.WebsiteUrl</a> </td>
                </tr>
                if (First30brews == 30)
                { break; }
            }
        }
    </table>
</div>
